{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "esnext",
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": ["node"],
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@features/*": ["features/*"],
      "@utils/*": ["utils/*"],
      "@constants/*": ["constants/*"],
      "@assets/*": ["assets/*"],
      "@app/*": ["app/*"],
      "@custom-fields": ["custom-fields/index.ts"],
      "@api/*": ["api/*"],
      "@firebaseConfig": ["firebaseConfig.ts"]
    }
  },
  "include": ["src/**/*"]
}
